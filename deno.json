{
  "package": {
    "name": "es-package",
    "description": "A template for creating and publishing an ES module",
    "github": "semicognitive/es-package"
  },
  "tasks": {
    "dnt": "deno run -A dnt.ts $(git describe --tags $(git rev-list --tags --max-count=1))"
  },
  "importMap": "import-map.json",
  "compilerOptions": {
    "lib": ["es2021", "dom"],
    "strict": true
  },
  "fmt": {
    "files": {
      "include": ["README.md", "mod.ts", "dnt.ts", "deno.json", "import-map.json", "src/"],
      "exclude": []
    }
  },
  "lint": {
    "files": {
      "include": ["mod.ts", "dnt.ts", "src/"],
      "exclude": []
    }
  }
}
